{% extends "layout.jinja2" %}

{% block todocontent %}

    <section id="todoapp">
        <header id="header">
            <h1>Login</h1>
        </header>

        <div id="formlogin">
            <p>Please enter your username and password (demo / demo) <br/></p>

            <p><em>{{ message }}</em></p>

            <form action="/login">
                <input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}">
                <input type="hidden" name="came_from" value="{{ came_from }}"/>
                <input name="login" class="edit login" placeholder="Enter your username" autofocus>
                <input type="password" name="password" class="edit login" placeholder="Enter your password">

                <input type="submit" name="form.submitted" value="Log In" class="btn"/>
            </form>
        </div>
    </section>

{% endblock %}