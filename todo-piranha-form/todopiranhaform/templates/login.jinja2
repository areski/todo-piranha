{% extends "layout.jinja2" %}

{% block todocontent %}

    <section id="todoapp">
        <header id="header">
            <h1>todos</h1>
        </header>

        <div id="formlogin">
            <form action="/login">
                <input type="hidden" name="came_from" value="{{ came_from }}"/>
                <input id="login" class="edit login" placeholder="Enter your username" autofocus>
                <input id="password" class="edit login" placeholder="Enter your password" type="password">

                <input type="submit" name="form.submitted" value="Log In" class="btn"/>
            </form>
        </div>
    </section>

{% endblock %}