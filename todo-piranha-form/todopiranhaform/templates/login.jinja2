{% extends "layout.jinja2" %}

{% block todocontent %}

    <section id="todoapp">
        <header id="header">
            <h1>Login</h1>
        </header>

        <div id="formlogin">
            <p>Please enter your username and password (demo / demo) <br/></p>

            <form action="{{request.route_url('login')}}" method="post" class="form">
                <input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}">
                <input type="hidden" name="came_from" value="{{ came_from }}"/>

                {{form.login(class_='edit login', placeholder="Enter your username", autofocus=true)}}
                {% for error in form.login.errors %}
                    <div class="error">{{ error }}</div>
                {% endfor %}

                {{form.password(class_='edit login', placeholder="Enter your password")}}
                {% for error in form.password.errors %}
                    <div class="error">{{ error }}</div>
                {% endfor %}

                <input type="submit" name="form.submitted" value="Log In" class="btn"/>
            </form>

        </div>
    </section>

{% endblock %}